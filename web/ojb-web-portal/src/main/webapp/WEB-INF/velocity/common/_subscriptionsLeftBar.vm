	#set($showSubFilter=$subscriptionFilterProperties['displaySubscriptionFilter'])		    
	  
	#if($showSubFilter=="true")
		<script type="text/javascript">
		
			$(function(){
			
				$('#portalContent').off('click', '#subResultsFilterButton')
					.on('click','#subResultsFilterButton',  function() {	
																			
					validateLinkExists = $("#validateLink").length > 0; 
					var formData = $('#filterSubscriptionForm').serialize();
					console.log("formData:" + formData); 
					console.log("validateLinkExists:" + validateLinkExists); 
									             	
			  		$.post("#springUrl('/subscriptions/filter/')" + validateLinkExists ,  	
			  			formData,	  		
			  			function(data) {	
			  				if (validateLinkExists){	  			
	    						$('#portalContent').html(data);
	    					}
	    					else{
	    						$("#subsAdminContent").html(data);	
	    					}	        									         					        				      
						}
					).fail(ojbc.displayFailMessage);				
				});
				
				
				$('#portalContent').off('click', '#subResultsFilterClearButton')
					.on('click','#subResultsFilterClearButton',  function() {	
	
					var formData = 'subscriptionStatus=All';
					validateLinkExists = $("#validateLink").length > 0;
									             	
			  		$.post("#springUrl('/subscriptions/filter/')" + validateLinkExists,  	
			  			formData,	  		
			  			function(data) {		  			
			  				if (validateLinkExists){	  			
	    						$('#portalContent').html(data);
	    					}
	    					else{
	    						$("#subsAdminContent").html(data);	
	    					}	        									         					        				      
							$('#subscriptionStatus').val('All');
						}
					).fail(ojbc.displayFailMessage);
				});
				
			});
		            
		</script>   
    
        
		<div class="breadcrumb mt-2" id="filterColumn">
			<form id="filterSubscriptionForm">
				<div class='row'>
					<div class="col-5 headerText">SUBSCRIPTIONS FILTER</div>
					<div class="col-2">
						#springFormSingleSelect("subscriptionFilterCommand.subscriptionStatus" $subscriptionFilterValueToLabelMap "")
					</div>
					<div class="col-5 pt-1">					
						<a href="#" id="subResultsFilterButton" style="margin:4px" class="blueButton">FILTER RESULTS</a><a href="#" id="subResultsFilterClearButton" style="margin:4px" class="blueButton">CLEAR</a>
					</div>
				</div>
			</form>
			
		</div>
	#end 		    
		      
