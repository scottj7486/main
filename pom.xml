<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.ojbc.build</groupId>
  <artifactId>ojb-main-aggregate</artifactId>
  <version>1.0.0</version>
  <packaging>pom</packaging>

  <modules>
    <module>shared</module>
    <module>utilities</module>
    <module>connectors</module>
    <module>intermediaries</module>
    <module>adapters</module>
    <module>prototypes</module>
    <module>web</module>
  </modules>

  <dependencies>
  </dependencies>

  <build>

    <plugins>

      <!-- Note, if updating license plugin config here, Ensure the second
        duplicate declartion is updated also in ojb-build-common project
        (Plugin declared twice to avoid cyclic dependency) -->
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>2.9</version>

        <!-- Reference jar with license txt file on classpath -->
        <dependencies>
          <dependency>
            <groupId>org.ojbc.build</groupId>
            <artifactId>ojb-build-common</artifactId>
            <version>1.0.0</version>
          </dependency>
        </dependencies>

        <configuration>
            <!-- Reference license on plugin classpath -->
          <header>ojb-license.txt</header>
          <aggregate>true</aggregate>
          <excludes>
            <exclude>**/jquery-datatable/**</exclude>
            <exclude>**/jquery-ui/**</exclude>
            <exclude>**/jquery.maskinput.js</exclude>
            <exclude>**/bin/**</exclude>
            <!-- note not excluding static/js/ojb-web-portal.js -->            
            <exclude>**/ebts-10.0-ws-specification/**</exclude>
          </excludes>
          <includes>
            <include>**/*.java</include>
            <include>**/*.xml</include>
            <include>**/*.xslt</include>
            <include>**/*.xsd</include>
            <include>**/*.wsdl</include>
            <include>**/*.xsl</include>
            <include>**/*.xslt</include>
            <include>**/*.vm</include>
            <include>**/*.html</include>
            <include>**/*.js</include>
            <include>**/*.sql</include>
          </includes>
          <mapping>
            <java>SLASHSTAR_STYLE</java>
            <wsdl>XML_STYLE</wsdl>
            <xslt>XML_STYLE</xslt>
            <sql>SLASHSTAR_STYLE</sql>
          </mapping>
        </configuration>
        <executions>
            <execution>
                <!-- bind check goal to run on its default phase(validate) -->
                <goals>
                    <goal>check</goal>
                </goals>
            </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
