<!DOCTYPE html>
<script type="text/javascript">
 
	/* Custom filtering function which will search data in column four between two values */
	$.fn.dataTable.ext.search.push(
	    function( settings, data, dataIndex ) {
	        var filter = $('#rapbacksFilter').val();
	        var status = data[5] ; // use data for the age column
	 
	        if ( ( !filter || filter ==='') ||
	             ( filter != status ))
	        {
	            return true;
	        }
	        return false;
	    }
	);
	
	$(function() {
	  
		$( document ).tooltip();
		
		optTable = {
			"pagingType": "full_numbers",
			"pageLength": 50,
			"language": {
        		"emptyTable": "No criminal identification record available"
   			 },
			"columnDefs": [{
				targets: [ 3 ],
			    searchable: false, 
			    sortable: false
			} ]
        };
		
		var oTable = $("#searchResultsTable").DataTable( optTable);
		
	});
</script>
	
	
<div id="searchResultsContainer" class="contentBox">

    <div id="searchResultsHeader"> 
        <p id="search-results-title">MANAGE CRIMINAL IDENTIFICATION</p>
    </div>
    
    <div style="padding:10px">
		#if($informationMessages && $informationMessages!='')
			<span class="error">
				$informationMessages
			</span><br/>
		#end
		$searchContent								
    </div>
    
</div>




